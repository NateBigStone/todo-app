<div id="app">
<ul>
  <li v-for="task in tasks" v-on:click="checkDone(task)">Task: {{ task.name }} - Priority: {{ task.priority }}</li>
  </ul>

<br>
Name of Task<input type="text" v-model="newTask" placeholder=""><br>
Priority <input type="number" v-model="newPriority" placeholder=""><br>
<button v-on:click="addTask()">Add Task</button><br>
<button v-on:click="removeTask()">Remove Last Task</button>
</div>